@page
@model FoodListRazor.Pages.FoodList.EditModel
@{
}
<br />
<h2 class="text-info">Change Food</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Food.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Food.Name" class="form-control" />
            </div>
            <span asp-validation-for="Food.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Food.Chef"></label>
            </div>
            <div class="col-6">
                <input asp-for="Food.Chef" class="form-control" />
            </div>
            <span asp-validation-for="Food.Chef" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Food.Country"></label>
            </div>
            <div class="col-6">
                <input asp-for="Food.Country" class="form-control" />
            </div>
            <span asp-validation-for="Food.Country" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}