@page
@model FoodListRazor.Pages.FoodList.CreateModel
@{
}
<br />
<h2 class="text-info">Make New Food</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Food.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Food.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Food.Chef"></label>
            </div>
            <div class="col-6">
                <input asp-for="Food.Chef" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Food.Country"></label>
            </div>
            <div class="col-6">
                <input asp-for="Food.Country" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>